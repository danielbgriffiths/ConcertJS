{
  "compilerOptions": {
    "target": "ES5",
    "module": "ES6",
    "jsx": "preserve",
    "jsxFactory": "c",
    "jsxFragmentFactory": "Fragment",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "sourceMap": true,
    "lib": ["dom", "es6"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*", "src/jsx.d.ts"]
}
